{
    "$id": "item-schema.json",
    "title": "Dual Universe Item",
    "description": "a item in dual universe",
    "type": "object",
    "properties": {
        "Name": { "description": "the name of the item", "type": "string"},
        "GroupId": {"$ref": "uuid-schema.json"},
        "Tier": {"type": "integer", "minimum": 1, "maximum": 5},
        "NqId": {"type": "integer", "minimum": 1},
        "Key": {"type": "string"},
        "Volume": {"type": "number", "minimum": 0},
        "Mass": {"type": "number", "minimum": 0},
        "Icon": {"type": "string"},
        //element
        "Hitpoints": {"type": "integer", "minimum": 1},
        "Antimatter Resistance": {"type": "number"},
        "Electromagnetic Resistance": {"type": "number"},
        "Kinetic Resistance": {"type": "number"},
        "Thermic Resistance": {"type": "number"},
        "Rate of Fire": {"type": "integer", "description": "Rate of fire in seconds"},
        "Reload": {"type": "integer", "description": "Reload rate in seconds"},
        "Magazin Volume": {"type": "integer", "description": "Magazin volume in liters", "minimum": 1},
        "Capacity Cost": {"type": "integer"},
        //ammo
        "Damage Type": {"type": "string"},
        "Weapon Damage Modifier": {"type": "number"},
        "Weapon Cone Modifier": {"type": "number"},
        "Weapon Tracking Modifier": {"type": "number"},
        "Weapon Optimal Distance Modifier": {"type": "number"},
        "Weapon Maximum Distance Modifier": {"type": "number"},
        "Weapon Accuracy Modifier": {"type": "number"},
        
        "Description": {"description": "a describing text for the item", "type": "string"},
        "NqSchemaId": {"type": "integer", "minimum": 1},
        "recipe": {
            "type": "object",
            "properties": {
                "NqRecipeId": {"type": "integer", "minimum": 1},
                "craftingTime": {"type": "integer", "minimum": 1},
                "craftingAmount": {"type": "integer", "minimum": 1},
                "ingredients": {
                    "type": "array",
                    "items": {
                        "type": "object", 
                        "properties": {
                            "key": {"type": "string"}, 
                            "quantity": {"type": "integer", "minimum": 1}
                        }, 
                        "required": ["key", "quantity"]
                    }
                },
                "products": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "key": {"type": "string"},
                            "quantity": {"type": "integer", "minimum": 1}
                        }
                    }
                }
            }
        }
    },
    "required": ["Name", "Description", "Volume", "Tier", "NqId", "Mass", "GroupId"]
}